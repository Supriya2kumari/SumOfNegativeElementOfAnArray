// find sum of negative no. in an array.

class PositiveNoSum
{
    public static void main(String [] args)
    {
        int arr[]={-5,6,22,4,-18,-12,10};
        
        int sum=0;
        
        for(int i = 0; i < arr.length; i++)
        {
            if(arr[i] < 0)
            {
                sum = sum + arr[i];
            }
        }
        System.out.println("Sum of positive no. of an array : "+sum);
    }
}
